@{
    ViewData["Title"] = "Página Pesquisa";
    Layout = null;

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar - Pesque & Fale</title>

    <!--Css/Google Fonts-->
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/pesquisar.css" />
    <link rel="stylesheet" href="~/css/contador.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<body>
    <partial name="_Sidebar" />

    <div class="column">
        <div class="container">
            <main>
                <section class="search-container">
                    <h2>PESQUISAR LOCAIS DE PESCA</h2>
                    <div class="search-box">
                        <input type="text" id="search-input" placeholder="Digite o nome de um local, cidade ou tipo de peixe..." />
                        <button id="search-button"><i class="fas fa-search"></i> Pesquisar</button>
                    </div>

                    <!--Filtrar Peixe-->
                    <div class="filters">
                        <div class="filter-group">
                            <label for="fish-type">Tipo de Peixe</label>
                            <select id="fish-type">
                                <option value="">Todos</option>
                                <option value="tucunaré">Tucunaré</option>
                                <option value="dourado">Dourado</option>
                                <option value="pintado">Pintado</option>
                                <option value="pacu">Pacu</option>
                                <option value="corvina">Corvina</option>
                            </select>
                        </div>

                        <!--Filtrar tipo do local de pesca-->
                        <div class="filter-group">
                            <label for="location-type">Tipo de Local</label>
                            <select id="location-type">
                                <option value="">Todos</option>
                                <option value="rio">Rio</option>
                                <option value="lago">Lago</option>
                                <option value="represa">Represa</option>
                                <option value="pesqueiro">Pesqueiro</option>
                                <option value="mar">Mar</option>
                            </select>
                        </div>

                        <!--Filtrar avaliação do local-->
                        <div class="filter-group">
                            <label for="rating">Avaliação Mínima</label>
                            <select id="rating">
                                <option value="0">Qualquer</option>
                                <option value="3">3+ estrelas</option>
                                <option value="4">4+ estrelas</option>
                                <option value="4.5">4.5+ estrelas</option>
                            </select>
                        </div>
                    </div>

                    <div class="results-container" id="results-container">
                        <!-- Os resultados serão inseridos aqui via JavaScript -->
                    </div>

                    <div id="no-results" class="no-results hidden">
                        <i class="fas fa-fish" style="font-size: 2em; margin-bottom: 15px;"></i>
                        <p>Nenhum local de pesca encontrado. Tente com outros termos de pesquisa.</p>
                    </div>
                </section>
            </main>
        </div>

        <!-- Rodapé -->
        <footer>
            <div class="footer-container">
                <div>
                    <h3>Sobre Nós</h3>
                    <p>Grupo de estudantes dedicados ao desenvolvimento de iniciativas voltadas à melhoria do trabalho socioeconômico em Matão-SP e região.</p>
                </div>
                <div>
                    <h3>Links Úteis</h3>
                    <a asp-controller="Home" asp-action="Home">Página Inicial</a>
                    <a asp-controller="Home" asp-action="Pesquisar">Pesquisa de Locais</a>
                    <a asp-controller="Home" asp-action="MelhoresLocais">Melhores locais</a>
                    <a asp-controller="Home" asp-action="Notificacao">Notificações</a>
                    <a asp-controller="Home" asp-action="Sobrenos">Sobre nós</a>
                    <a asp-controller="Usuario" asp-action="Perfil">Perfil</a>
                </div>
                <div>
                    <h3>Contato</h3>
                    <p>Email: pesquefale@gmail.com</p>
                </div>
            </div>
            <p class="copyright">&copy; Pesque & Fale 2025 - Todos os direitos reservados.</p>
        </footer>
    </div>

    <!--Scripts (defer onde possível)-->
    <script src="~/js/script.js" defer></script>
    <script src="~/js/pesquisa.js" defer></script>
    <script src="~/js/menu.js" defer></script>
    <script src="~/js/notificacao.js" defer></script>
</body>

</html>