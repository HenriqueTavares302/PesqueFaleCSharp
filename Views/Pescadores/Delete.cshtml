@model PesqueFaleCSharp.Models.Pescador

@{
    ViewData["Title"] = "Excluir Pescador";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <h3>Tem certeza que deseja excluir este Pescador?</h3>
    <div>
        <h4>Pescador</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.email)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="id_pescador" />
            <input type="submit" value="Excluir" class="btn btn-delete" /> |
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </form>
    </div>
</div>
